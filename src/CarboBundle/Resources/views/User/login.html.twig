{% extends "CarboBundle::layout.html.twig" %}
{% block content %}

    {% if is_granted('ROLE_USER') %}
        <strong>
            Estas logeado como usuario normal
        </strong>
    {% endif %}
    {% if is_granted('ROLE_ADMIN') %}
        <strong>
            Estas logeado como usuario administrador TODO PODEROSO
        </strong>
    {% endif %}
    <div class="col-lg-6">
        <h2>Identificate</h2>
        <hr>
        <form action="{{ path("login_check") }}" method="post">
            <label>Email: </label>
            <input type="email" id="username" name="_username" value="{{ lastUsername }}" class="form-control"/>
            <br>
            <label>Contrase√±a: </label>
            <input type="password" id="password" name="_password" class="form-control"/>
            <br>
            <input type="submit" value="Entrar" class="btn btn-success"/>
            <input type="hidden" name="_target_path" value="/login" />
        </form>
    </div>

    <div class="clearfix"></div>
{% endblock %}